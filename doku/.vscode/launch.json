{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Update Sphinx",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/RunSphinx.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Generate Rst From Source",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/DelphiXML2RST.ps1",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}"
        }
    ]
}